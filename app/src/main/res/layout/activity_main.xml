<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sayedsalah.supermarket.MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/supermarket"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SuperMarket"
            android:textSize="35sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome at our market here are great discounts "
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect us"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FF1744"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"
            android:id="@+id/connect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address :  "
            android:textSize="25sp"
            android:textColor="#FF1744"
            android:layout_marginTop="10dp"
            android:id="@+id/addresstextView"
            android:layout_below="@+id/connect"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Rue of Zamalek"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/addresstextView"
            android:layout_toRightOf="@+id/addresstextView"
            android:layout_toEndOf="@+id/addresstextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone :  "
            android:textColor="#FF1744"
            android:textSize="25sp"
            android:id="@+id/phonetxtview"
            android:layout_below="@+id/addresstextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="023345689712"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/phonetxtview"
            android:layout_toRightOf="@+id/phonetxtview"
            android:layout_toEndOf="@+id/phonetxtview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail : "
            android:textColor="#FF1744"
            android:textSize="25sp"
            android:id="@+id/emailtxtview"
            android:layout_below="@+id/phonetxtview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="market_star@yahoo.com"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/emailtxtview"
            android:layout_toRightOf="@+id/phonetxtview"
            android:layout_toEndOf="@+id/phonetxtview"
            android:gravity="center" />


    </RelativeLayout>
</ScrollView>